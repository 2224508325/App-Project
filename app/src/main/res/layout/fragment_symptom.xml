<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.SymptomFragment">

    <!-- TODO: Update blank fragment layout -->


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageButton
            android:id="@+id/belly"
            android:layout_width="109dp"
            android:layout_height="123dp"
            android:layout_marginStart="91dp"
            android:layout_marginLeft="91dp"
            android:layout_marginTop="109dp"
            android:layout_marginEnd="81dp"
            android:layout_marginRight="81dp"
            android:adjustViewBounds="true"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/belly"
            app:layout_constraintEnd_toEndOf="@+id/right_hand"
            app:layout_constraintStart_toStartOf="@+id/left_hand"
            app:layout_constraintTop_toTopOf="@+id/chest" />

        <ImageButton
            android:id="@+id/chest"
            android:layout_width="146dp"
            android:layout_height="129dp"
            android:adjustViewBounds="true"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/chest"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.362" />

        <ImageButton
            android:id="@+id/feet"
            android:layout_width="150dp"
            android:layout_height="237dp"
            android:layout_marginStart="69dp"
            android:layout_marginLeft="69dp"
            android:layout_marginTop="101dp"
            android:layout_marginEnd="62dp"
            android:layout_marginRight="62dp"
            android:adjustViewBounds="true"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/feet"
            app:layout_constraintEnd_toEndOf="@+id/right_hand"
            app:layout_constraintStart_toStartOf="@+id/left_hand"
            app:layout_constraintTop_toTopOf="@+id/belly" />

        <ImageButton
            android:id="@+id/head"
            android:layout_width="93dp"
            android:layout_height="91dp"
            android:layout_marginStart="102dp"
            android:layout_marginLeft="102dp"
            android:layout_marginEnd="86dp"
            android:layout_marginRight="86dp"
            android:adjustViewBounds="true"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/head"
            app:layout_constraintBottom_toTopOf="@+id/chest"
            app:layout_constraintEnd_toEndOf="@+id/right_hand"
            app:layout_constraintEnd_toStartOf="@+id/right_hand"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/left_hand" />

        <ImageButton
            android:id="@+id/left_hand"
            android:layout_width="114dp"
            android:layout_height="211dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="105dp"
            android:layout_marginRight="105dp"
            android:adjustViewBounds="true"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/left_hand"
            app:layout_constraintEnd_toEndOf="@+id/chest"
            app:layout_constraintTop_toTopOf="@+id/chest" />

        <ImageButton
            android:id="@+id/right_hand"
            android:layout_width="86dp"
            android:layout_height="205dp"
            android:layout_marginStart="122dp"
            android:layout_marginLeft="122dp"
            android:layout_marginTop="19dp"
            android:adjustViewBounds="true"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/right_hand"
            app:layout_constraintStart_toStartOf="@+id/chest"
            app:layout_constraintTop_toTopOf="@+id/chest" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Where are you feeling uncomfortable?"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintBottom_toTopOf="@+id/head"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.SymptomFragment">

    <!-- TODO: Update blank fragment layout -->


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/pelvic"
            android:layout_width="110dp"
            android:layout_height="81dp"
            android:layout_marginStart="90dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="82dp"
            android:layout_marginRight="82dp"
            android:adjustViewBounds="true"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/pelvic"
            app:layout_constraintEnd_toEndOf="@+id/right_hand"
            app:layout_constraintStart_toStartOf="@+id/left_hand"
            app:layout_constraintTop_toTopOf="@+id/abdomen" />

        <ImageButton
            android:id="@+id/upperbody"
            android:layout_width="146dp"
            android:layout_height="129dp"
            android:adjustViewBounds="true"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/upperbody"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.392" />

        <ImageButton
            android:id="@+id/feet"
            android:layout_width="129dp"
            android:layout_height="254dp"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="66dp"
            android:layout_marginEnd="13dp"
            android:layout_marginRight="13dp"
            android:adjustViewBounds="true"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/feet"
            app:layout_constraintEnd_toEndOf="@+id/upperbody"
            app:layout_constraintStart_toStartOf="@+id/upperbody"
            app:layout_constraintTop_toTopOf="@+id/pelvic" />

        <ImageButton
            android:id="@+id/head"
            android:layout_width="83dp"
            android:layout_height="83dp"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginEnd="31dp"
            android:layout_marginRight="31dp"
            android:adjustViewBounds="true"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/head"
            app:layout_constraintBottom_toTopOf="@+id/upperbody"
            app:layout_constraintEnd_toEndOf="@+id/upperbody"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/upperbody" />

        <ImageButton
            android:id="@+id/left_hand"
            android:layout_width="112dp"
            android:layout_height="207dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="108dp"
            android:layout_marginRight="108dp"
            android:adjustViewBounds="true"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/lefthand"
            app:layout_constraintEnd_toEndOf="@+id/upperbody"
            app:layout_constraintTop_toTopOf="@+id/upperbody" />

        <ImageButton
            android:id="@+id/right_hand"
            android:layout_width="86dp"
            android:layout_height="205dp"
            android:layout_marginStart="122dp"
            android:layout_marginLeft="122dp"
            android:layout_marginTop="19dp"
            android:adjustViewBounds="true"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/righthand"
            app:layout_constraintStart_toStartOf="@+id/upperbody"
            app:layout_constraintTop_toTopOf="@+id/upperbody" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Where are you feeling uncomfortable?"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintBottom_toTopOf="@+id/head"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.487"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.704" />



        <ImageButton
            android:id="@+id/abdomen"
            android:layout_width="96dp"
            android:layout_height="50dp"
            android:layout_marginTop="95dp"
            android:adjustViewBounds="true"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/abdomen"
            app:layout_constraintEnd_toEndOf="@+id/upperbody"
            app:layout_constraintStart_toStartOf="@+id/upperbody"
            app:layout_constraintTop_toTopOf="@+id/upperbody" />

        <TextView
            android:id="@+id/TextHead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Head"
            app:layout_constraintBottom_toTopOf="@+id/upperbody"
            app:layout_constraintEnd_toEndOf="@+id/head"
            app:layout_constraintStart_toStartOf="@+id/head"
            app:layout_constraintTop_toTopOf="@+id/head" />

        <TextView
            android:id="@+id/TextUpper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upper Body"
            app:layout_constraintBottom_toTopOf="@+id/abdomen"
            app:layout_constraintEnd_toEndOf="@+id/upperbody"
            app:layout_constraintStart_toStartOf="@+id/upperbody"
            app:layout_constraintTop_toTopOf="@+id/upperbody" />

        <TextView
            android:id="@+id/TextAbdomen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Abdomen"
            app:layout_constraintBottom_toBottomOf="@+id/upperbody"
            app:layout_constraintEnd_toStartOf="@+id/right_hand"
            app:layout_constraintStart_toStartOf="@+id/abdomen"
            app:layout_constraintTop_toTopOf="@+id/abdomen" />

        <TextView
            android:id="@+id/TextPelvic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pelvic"
            app:layout_constraintBottom_toTopOf="@+id/feet"
            app:layout_constraintEnd_toEndOf="@+id/pelvic"
            app:layout_constraintStart_toStartOf="@+id/pelvic"
            app:layout_constraintTop_toTopOf="@+id/pelvic" />

        <TextView
            android:id="@+id/limbR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="129dp"
            android:text="Upper Limbs"
            app:layout_constraintStart_toStartOf="@+id/right_hand"
            app:layout_constraintTop_toTopOf="@+id/right_hand" />

        <TextView
            android:id="@+id/LimbL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="138dp"
            android:layout_marginEnd="72dp"
            android:layout_marginRight="72dp"
            android:text="Upper Limbs"
            app:layout_constraintEnd_toEndOf="@+id/left_hand"
            app:layout_constraintTop_toTopOf="@+id/left_hand" />

        <TextView
            android:id="@+id/Limbs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="40dp"
            android:text="Lower Limbs"
            app:layout_constraintStart_toStartOf="@+id/feet"
            app:layout_constraintTop_toTopOf="@+id/feet" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>